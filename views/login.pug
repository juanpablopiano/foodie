include includes/head

.container
    .row
        //- Default form login
        form#login-form.text-center.border.border-light.p-5(action="/login" method="POST")
            p.h4.mb-4 Log in
            //- Email
            input#defaultLoginFormEmail.form-control.mb-4(type="text" name="username" placeholder="Username" required)
            //- Password
            input#defaultLoginFormPassword.form-control.mb-4(type="password" name="password" placeholder="Password" required)
            .d-flex.justify-content-around
                div
                    //- Remember me
                    .custom-control.custom-checkbox
                        input#defaultLoginFormRemember.custom-control-input(type='checkbox')
                        label.custom-control-label(for='defaultLoginFormRemember') Remember me
                div
                    //- Forgot password
                    a(href='#') Forgot password?
            //- Sign in button
            button.btn.btn-info.btn-block.my-4(type='submit') Log in
            //- Register
            p
                | Not a member? 
                a(href='/register') Register
            //- Social login
            p or sign in with:
            a.mx-2(href='#' role='button')
                i.fab.fa-facebook-f.light-blue-text
            a.mx-2(href='#' role='button')
                i.fab.fa-twitter.light-blue-text
            a.mx-2(href='#' role='button')
                i.fab.fa-linkedin-in.light-blue-text
            a.mx-2(href='#' role='button')
                i.fab.fa-github.light-blue-text


include includes/footer
