doctype html
html(lang="en")
    head
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Foodie
        link(rel="shortcut icon", href=`${process.env.WEBSITE}/static/favicon.ico`, type="image/x-icon")
        link(rel="stylesheet", href="stylesheets/style.css")
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.2/css/all.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.16.0/css/mdb.min.css")
    body
        header.header
            nav.navbar.navbar-expand-md.sticky-top.navbar-dark.indigo
                a.navbar-brand(href="/")
                    img(src=`${process.env.WEBSITE}/static/f.svg`, width="30", height="30")
                    span  Foodie
                
                .collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        if !currentUser
                            li.nav-item
                                a.nav-link(href="/login") Login
                            li.nav-item
                                a.nav-link(href="/register") Register
                        else
                            li.nav-item
                                a.nav-link(href="/u/" + currentUser.username) Signed in as #{currentUser.firstname.slice(0, 1).toUpperCase() + currentUser.firstname.slice(1).toLowerCase()}
                            li.nav-item
                                a.nav-link(href="/logout") Logout
